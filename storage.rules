rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Publicly readable profile photos; writes via authenticated users only
    match /users/{uid}/photos/{filename} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
